Options +FollowSymLinks
RewriteEngine On



# Remove .php extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^\.]+)/?$ $1.php [NC,L]

# Remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^\.]+)/?$ $1.html [NC,L]



# If the request is for a directory
RewriteCond %{REQUEST_FILENAME} -d

# If index.php exists in the directory, serve it
RewriteCond %{REQUEST_URI} ^(.*)/$
RewriteCond %{DOCUMENT_ROOT}%1/index.php -f
RewriteRule ^(.*)/$ %{REQUEST_URI}index.php [L]

# If index.html exists in the directory, serve it
RewriteCond %{REQUEST_URI} ^(.*)/$
RewriteCond %{DOCUMENT_ROOT}%1/index.html -f
RewriteRule ^(.*)/$ %{REQUEST_URI}index.html [L]



# SPA Routing List
RewriteRule ^places$    index.php [L]
RewriteRule ^heritages$ index.php [L]
RewriteRule ^clipboard$ index.php [L]
